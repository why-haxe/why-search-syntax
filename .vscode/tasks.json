{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "lix run travix node",
			// "command": "lix run travix jvm",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "haxe: active configuration"
		},
		{
			"type": "hxml",
			"file": "playground.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "haxe: playground.hxml"
		}
	]
}